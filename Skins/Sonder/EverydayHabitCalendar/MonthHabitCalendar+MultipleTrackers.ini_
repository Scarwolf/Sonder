Stringalign=Center
X=(#WORKAREAWIDTH#/2)
Y=5
Antialias=1
Text=#HeaderText#
Fontsize=#HeaderTextSize#
Fontface=#LocalFontFace2#
FontColor=#CalendarFontColor#

[StreakCircle]
